@{
    ViewData["Title"] = "Order";
}

<section class="order-page">
    <div class="container">
        <div class="page-header">
            <h1>Place Your Order</h1>
            <p>Order your premium honey products - no registration required</p>
        </div>

        <div class="order-content">
            <div class="order-form-section">
                <form class="order-form" action="@Url.Action("SubmitOrder", "Order")" method="post">
                    <div class="form-section">
                        <h2><i class="fas fa-user"></i> Personal Information</h2>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name *</label>
                                <input type="text" id="firstName" name="FirstName" required>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name *</label>
                                <input type="text" id="lastName" name="LastName" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="phone">Phone Number *</label>
                            <input type="tel" id="phone" name="PhoneNumber" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="Email" placeholder="Optional - for order updates">
                        </div>
                    </div>

                    <div class="form-section">
                        <h2><i class="fas fa-map-marker-alt"></i> Delivery Address</h2>
                        <div class="form-group">
                            <label for="address">Street Address *</label>
                            <input type="text" id="address" name="Address" required>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="city">City *</label>
                                <input type="text" id="city" name="City" required>
                            </div>
                            <div class="form-group">
                                <label for="state">State *</label>
                                <input type="text" id="state" name="State" required>
                            </div>
                            <div class="form-group">
                                <label for="zipCode">ZIP Code *</label>
                                <input type="text" id="zipCode" name="ZipCode" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="deliveryNotes">Delivery Notes</label>
                            <textarea id="deliveryNotes" name="DeliveryNotes" rows="3" placeholder="Special delivery instructions (optional)"></textarea>
                        </div>
                    </div>

                    <div class="form-section">
                        <h2><i class="fas fa-shopping-cart"></i> Product Selection</h2>
                        <div class="product-selection">
                            <div class="product-item">
                                <div class="product-info">
                                    <img src="/placeholder.svg?height=80&width=80" alt="Premium Raw Honey">
                                    <div class="product-details">
                                        <h4>Premium Raw Honey</h4>
                                        <p class="product-price">$24.99</p>
                                    </div>
                                </div>
                                <div class="quantity-control">
                                    <button type="button" class="qty-btn minus">-</button>
                                    <input type="number" name="Products[0].Quantity" value="0" min="0" class="qty-input">
                                    <button type="button" class="qty-btn plus">+</button>
                                    <input type="hidden" name="Products[0].ProductId" value="1">
                                    <input type="hidden" name="Products[0].Price" value="24.99">
                                </div>
                            </div>

                            <div class="product-item">
                                <div class="product-info">
                                    <img src="/placeholder.svg?height=80&width=80" alt="Manuka Honey">
                                    <div class="product-details">
                                        <h4>Manuka Honey UMF 15+</h4>
                                        <p class="product-price">$49.99</p>
                                    </div>
                                </div>
                                <div class="quantity-control">
                                    <button type="button" class="qty-btn minus">-</button>
                                    <input type="number" name="Products[1].Quantity" value="0" min="0" class="qty-input">
                                    <button type="button" class="qty-btn plus">+</button>
                                    <input type="hidden" name="Products[1].ProductId" value="2">
                                    <input type="hidden" name="Products[1].Price" value="49.99">
                                </div>
                            </div>

                            <div class="product-item">
                                <div class="product-info">
                                    <img src="/placeholder.svg?height=80&width=80" alt="Wildflower Honey">
                                    <div class="product-details">
                                        <h4>Wildflower Honey</h4>
                                        <p class="product-price">$19.99</p>
                                    </div>
                                </div>
                                <div class="quantity-control">
                                    <button type="button" class="qty-btn minus">-</button>
                                    <input type="number" name="Products[2].Quantity" value="0" min="0" class="qty-input">
                                    <button type="button" class="qty-btn plus">+</button>
                                    <input type="hidden" name="Products[2].ProductId" value="3">
                                    <input type="hidden" name="Products[2].Price" value="19.99">
                                </div>
                            </div>

                            <div class="product-item">
                                <div class="product-info">
                                    <img src="/placeholder.svg?height=80&width=80" alt="Royal Jelly Blend">
                                    <div class="product-details">
                                        <h4>Royal Jelly Honey Blend</h4>
                                        <p class="product-price">$39.99</p>
                                    </div>
                                </div>
                                <div class="quantity-control">
                                    <button type="button" class="qty-btn minus">-</button>
                                    <input type="number" name="Products[3].Quantity" value="0" min="0" class="qty-input">
                                    <button type="button" class="qty-btn plus">+</button>
                                    <input type="hidden" name="Products[3].ProductId" value="4">
                                    <input type="hidden" name="Products[3].Price" value="39.99">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h2><i class="fas fa-credit-card"></i> Payment Method</h2>
                        <div class="payment-options">
                            <div class="payment-option">
                                <input type="radio" id="cod" name="PaymentMethod" value="cod" checked>
                                <label for="cod">
                                    <i class="fas fa-money-bill-wave"></i>
                                    Cash on Delivery
                                    <span class="payment-desc">Pay when you receive your order</span>
                                </label>
                            </div>
                            <div class="payment-option">
                                <input type="radio" id="card" name="PaymentMethod" value="card">
                                <label for="card">
                                    <i class="fas fa-credit-card"></i>
                                    Credit/Debit Card
                                    <span class="payment-desc">Secure online payment</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="submit-order-btn">
                            <span>Place Order</span>
                            <i class="fas fa-shopping-cart"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="order-summary">
                <div class="summary-card">
                    <h3>Order Summary</h3>
                    <div class="summary-content">
                        <div class="summary-item">
                            <span>Subtotal:</span>
                            <span class="subtotal">$0.00</span>
                        </div>
                        <div class="summary-item">
                            <span>Shipping:</span>
                            <span class="shipping">$5.99</span>
                        </div>
                        <div class="summary-item discount">
                            <span>Discount:</span>
                            <span class="discount-amount">-$0.00</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-item total">
                            <span>Total:</span>
                            <span class="total-amount">$5.99</span>
                        </div>
                    </div>

                    <div class="promo-code">
                        <input type="text" placeholder="Enter promo code" class="promo-input">
                        <button type="button" class="apply-promo-btn">Apply</button>
                    </div>

                    <div class="delivery-info">
                        <h4><i class="fas fa-truck"></i> Delivery Information</h4>
                        <ul>
                            <li>Free shipping on orders over $50</li>
                            <li>Standard delivery: 3-5 business days</li>
                            <li>Express delivery available</li>
                        </ul>
                    </div>

                    <div class="guarantee">
                        <h4><i class="fas fa-shield-alt"></i> Our Guarantee</h4>
                        <p>100% satisfaction guaranteed or your money back</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
