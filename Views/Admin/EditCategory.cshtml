@model CategoryAndProductViewModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="page-header">
        <div class="header-content">
            <div class="breadcrumb">
                <a href="/Admin/Categories" class="breadcrumb-link">
                    <i class="fas fa-arrow-left"></i>
                    Back to Categories
                </a>
            </div>
            <h1>Edit Category</h1>
            <p>Modify category details and manage associated products</p>
        </div>
        <div class="header-actions">
            <form method="post" action="/Admin/DeleteCategory" style="display: inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.CategoryID" />
                <button type="submit" class="btn-danger" onclick="return confirm('Are you sure you want to delete this category? This action cannot be undone.')">
                    <i class="fas fa-trash"></i>
                    Delete Category
                </button>
            </form>
            <button type="submit" form="editCategoryForm" class="btn-primary">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
        </div>
    </div>

    <div class="edit-category-container">
        <!-- Category Edit Form -->
        <div class="category-edit-section">
            <div class="section-card">
                <div class="section-header">
                    <h2>Category Information</h2>
                </div>

                <form class="category-edit-form" id="editCategoryForm" method="post" action="/Admin/UpdateEditCategory">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />

                    <div class="form-row">
                        <div class="form-group">
                            <label for="Name">Category Name <span class="required">*</span></label>
                            <input type="text" id="Name" asp-for="Name" required maxlength="50" placeholder="Enter category name">
                            <div class="char-count">
                                <span>9</span>/50 characters
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="Description">Description <span class="required">*</span></label>
                        <textarea id="Description" asp-for="Description" rows="4" required maxlength="500" placeholder="Enter a detailed description of this category...">Unprocessed honey straight from the hive with all natural enzymes and nutrients intact.</textarea>
                        <div class="char-count">
                            <span>89</span>/500 characters
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <!-- Category Products Section -->
        <div class="category-products-section">
            <div class="section-card">
                <div class="section-header">
                    <h2>Products in this Category</h2>
                    <div class="products-count">
                        <span>@Model.Products.Count()</span> products
                    </div>
                </div>

                <div class="products-actions">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search products..." name="productSearch">
                    </div>
                    <a href="/Admin/Products/Add?categoryId=1" class="btn-secondary">
                        <i class="fas fa-plus"></i>
                        Add Product
                    </a>
                </div>

                <div class="products-grid">
                    <!-- Product Loop -->
                    @foreach (var item in Model.Products)
                    {
                        <div class="product-card">
                            <div class="product-image">
                                <img src="/images/@item.ImageUrl" alt="@item.ImageUrl">
                            </div>
                            
                            <div class="product-info">
                                <h4>@item.Name</h4>
                                <p>@item.Description</p>
                                <div class="product-price">@item.Price.ToString("C2")</div>
                                <div class="product-actions">
                                    <a asp-action="EditProduct" asp-route-id="@item.ProductID" class="btn-icon-small edit" title="Edit Product">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="/Admin/RemoveProductFromCategory" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <button type="submit" class="btn-icon-small remove" title="Remove from Category" onclick="return confirm('Remove this product from the category?')">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Edit Category Page Styles */
    .edit-category-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .section-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .section-header {
        padding: 1.5rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .section-header h2 {
            margin: 0;
            color: var(--text-dark);
            font-size: 1.25rem;
            font-weight: 600;
        }

    .breadcrumb {
        margin-bottom: 1rem;
    }

    .breadcrumb-link {
        color: var(--primary-gold);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

        .breadcrumb-link:hover {
            color: var(--accent-amber);
        }

    .category-status-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #28a745;
    }

        .status-dot.inactive {
            background: #dc3545;
        }

    .status-text {
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-light);
    }

    /* Form Styles */
    .category-edit-form {
        padding: 1.5rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-dark);
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.9rem;
            transition: border-color 0.3s ease;
        }

            .form-group input:focus,
            .form-group textarea:focus,
            .form-group select:focus {
                outline: none;
                border-color: var(--primary-gold);
            }

    .icon-selector {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

        .icon-selector select {
            flex: 1;
        }

    .icon-preview {
        width: 40px;
        height: 40px;
        background: var(--primary-gold);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .char-count {
        font-size: 0.75rem;
        color: var(--text-light);
        text-align: right;
        margin-top: 0.25rem;
    }

    .required {
        color: #dc3545;
    }

    .checkbox-label {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        cursor: pointer;
    }

        .checkbox-label small {
            display: block;
            color: var(--text-light);
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }

    /* Products Section */
    .products-count {
        background: var(--primary-gold);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .products-actions {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    .search-box {
        position: relative;
        flex: 1;
        max-width: 300px;
    }

        .search-box i {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
        }

        .search-box input {
            width: 100%;
            padding: 0.5rem 0.75rem 0.5rem 2.5rem;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            font-size: 0.9rem;
        }

    .products-grid {
        padding: 1.5rem;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
        min-height: 200px;
    }

    .product-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .product-image {
        width: 100%;
        height: 120px;
        background: #e9ecef;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-image i {
            font-size: 2rem;
            color: var(--text-light);
        }

    .product-info h4 {
        margin: 0 0 0.5rem 0;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .product-info p {
        margin: 0 0 0.75rem 0;
        font-size: 0.8rem;
        color: var(--text-light);
        line-height: 1.4;
    }

    .product-price {
        font-weight: 600;
        color: var(--primary-gold);
        font-size: 0.9rem;
        margin-bottom: 0.75rem;
    }

    .product-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-icon-small {
        width: 28px;
        height: 28px;
        border: none;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 0.8rem;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-icon-small.edit {
            background: #007bff;
            color: white;
        }

        .btn-icon-small.remove {
            background: #dc3545;
            color: white;
        }

        .btn-icon-small:hover {
            transform: scale(1.1);
        }

    /* 

    */
    .btn-danger {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 4px rgba(220, 53, 69, 0.2);
        position: relative;
        overflow: hidden;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }

        .btn-danger:active {
            transform: translateY(0);
            box-shadow: 0 2px 4px rgba(220, 53, 69, 0.2);
        }

        .btn-danger:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.25);
        }

        .btn-danger:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        /* Icon styling */
        .btn-danger i {
            font-size: 0.875rem;
            transition: transform 0.3s ease;
        }

        .btn-danger:hover i {
            transform: scale(1.1);
        }

        /* Loading state (optional) */
        .btn-danger.loading {
            pointer-events: none;
        }

            .btn-danger.loading i {
                animation: spin 1s linear infinite;
            }

    
    

    }</style>
