<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Golden Honey Admin</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="admin-body">
    <!-- Admin Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <div class="admin-brand">
                <i class="fas fa-honey-pot"></i>
                <span class="brand-text">Golden Honey</span>
                <span class="admin-label">Admin</span>
            </div>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <nav class="sidebar-nav">
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="@Url.Action("Dashboard", "Admin")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Products", "Admin")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Products" ? "active" : "")">
                        <i class="fas fa-honey-pot"></i>
                        <span>Products</span>
                        <span class="nav-badge">24</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Orders", "Admin")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Orders" ? "active" : "")">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Orders</span>
                        <span class="nav-badge pending">12</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Reviews", "Admin")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Reviews" ? "active" : "")">
                        <i class="fas fa-star"></i>
                        <span>Reviews</span>
                        <span class="nav-badge warning">23</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Customers", "Admin")" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Customers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Analytics", "Admin")" class="nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Analytics</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Settings", "Admin")" class="nav-link">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <div class="admin-profile">
                <img src="/placeholder.svg?height=40&width=40&text=Admin" alt="Admin" class="profile-avatar">
                <div class="profile-info">
                    <span class="profile-name">Admin User</span>
                    <span class="profile-role">Administrator</span>
                </div>
            </div>
            <div class="sidebar-actions">
                <a href="@Url.Action("Index", "Home")" class="action-btn" title="View Website">
                    <i class="fas fa-external-link-alt"></i>
                </a>
                <a href="@Url.Action("Logout", "Admin")" class="action-btn" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </aside>

    <!-- Admin Main Content -->
    <main class="admin-main">
        <!-- Admin Header -->
        <header class="admin-header">
            <div class="header-left">
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="breadcrumb">
                    <span>Admin</span>
                    <i class="fas fa-chevron-right"></i>
                    <span>@ViewData["Title"]</span>
                </div>
            </div>

            <div class="header-right">
                <div class="header-search">
                    <input type="text" placeholder="Search..." class="search-input">
                    <i class="fas fa-search"></i>
                </div>

                <div class="header-notifications">
                    <button class="notification-btn" id="notificationBtn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">5</span>
                    </button>
                    <div class="notification-dropdown" id="notificationDropdown">
                        <div class="notification-header">
                            <h3>Notifications</h3>
                            <button class="mark-all-read">Mark all as read</button>
                        </div>
                        <div class="notification-list">
                            <div class="notification-item unread">
                                <div class="notification-icon order">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <div class="notification-content">
                                    <p>New order received from Sarah Johnson</p>
                                    <span class="notification-time">2 minutes ago</span>
                                </div>
                            </div>
                            <div class="notification-item unread">
                                <div class="notification-icon review">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="notification-content">
                                    <p>New review pending approval</p>
                                    <span class="notification-time">15 minutes ago</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="admin-profile-dropdown">
                    <button class="profile-btn" id="profileBtn">
                        <img src="/placeholder.svg?height=32&width=32&text=A" alt="Admin" class="profile-image">
                        <span class="profile-name">Admin</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div class="profile-dropdown" id="profileDropdown">
                        <a href="@Url.Action("Profile", "Admin")" class="dropdown-item">
                            <i class="fas fa-user"></i>
                            Profile Settings
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="dropdown-item">
                            <i class="fas fa-external-link-alt"></i>
                            View Website
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="@Url.Action("Logout", "Admin")" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Admin Content -->
        <div class="admin-content">
            @RenderBody()
        </div>
    </main>

    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <script src="~/js/site.js"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
