
@{
    ViewData["Title"] = "Product Details";
}

<!-- Product Details -->
<section class="product-details">
    <div class="container">
        <div class="product-detail-grid">
            <div class="product-images">
                <div class="main-image">
                    <img id="mainImage" src="/placeholder.svg?height=400&width=400" alt="Premium Wildflower Honey" />
                </div>
                <div class="thumbnail-images">
                    <img src="/placeholder.svg?height=100&width=100" alt="Honey jar front" onclick="changeImage(this)" />
                    <img src="/placeholder.svg?height=100&width=100" alt="Honey jar back" onclick="changeImage(this)" />
                    <img src="/placeholder.svg?height=100&width=100" alt="Honey texture" onclick="changeImage(this)" />
                </div>
            </div>

            <div class="product-info-detail">
                <h1>Premium Wildflower Honey</h1>
                <div class="product-rating">
                    <div class="stars">
                        <span class="star filled">★</span>
                        <span class="star filled">★</span>
                        <span class="star filled">★</span>
                        <span class="star filled">★</span>
                        <span class="star filled">★</span>
                    </div>
                    <span class="rating-text">(24 reviews)</span>
                </div>

                <div class="product-price-detail">$24.99</div>

                <div class="product-description-detail">
                    <p>Our Premium Wildflower Honey is a delightful blend of seasonal wildflowers, carefully harvested from our sustainable apiaries. This raw, unfiltered honey captures the essence of nature's bounty with its complex floral notes and golden amber color.</p>

                    <h3>Product Features:</h3>
                    <ul>
                        <li>100% Raw and Unfiltered</li>
                        <li>No additives or preservatives</li>
                        <li>Rich in natural enzymes and antioxidants</li>
                        <li>Sustainably harvested</li>
                        <li>500g glass jar</li>
                    </ul>
                </div>

                <div class="product-actions">
                    <div class="quantity-selector">
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" value="1" min="1" max="10" />
                    </div>
                    <button class="add-to-cart-btn" onclick="addToCart()">Add to Cart</button>
                    <a href="order.html?product=1" class="buy-now-btn">Buy Now</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Product Reviews -->
