@model List<Category>

@{
    ViewData["Title"] = "Products";
}

<section class="products-page">
    <div class="container">
        <div class="page-header">
            <h1>Our Premium Honey Collection</h1>
            <p>Discover the finest honey products for your wellness journey</p>
        </div>

        <div class="products-filter">
            <div class="filter-buttons">
                @{int i = 0 ;}
                @foreach (var item in Model)
                {
                    if(i == 0)
                    {
                        <button class="filter-btn active" data-filter="all">@item.Name</button>
                    }
                    else
                    {
                        <button class="filter-btn " data-filter="all">@item.Name</button>
                    }
                    i++;
                }
            </div>
        </div>

        <div class="products-grid">
            <div class="product-card" data-category="raw">
                <div class="product-badge">Best Seller</div>
                <div class="product-image">
                    <img src="/images/honey.png" alt="Premium Raw Honey">
                    <div class="product-overlay">
                        <button class="add-to-cart-btn">Add to Cart</button>
                        <button class="quick-view-btn">Quick View</button>
                    </div>
                </div>
                <div class="product-info">
                    <h3>Premium Raw Honey</h3>
                    <p class="product-description">Pure, unprocessed honey with natural enzymes and antioxidants. Perfect for daily wellness.</p>
                    <div class="product-price">
                        <span class="current-price">$24.99</span>
                        <span class="original-price">$29.99</span>
                    </div>
                    <div class="product-rating">
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <span class="rating-count">(127 reviews)</span>
                    </div>
                    <div class="product-benefits">
                        <span class="benefit-tag">Energy Boost</span>
                        <span class="benefit-tag">Natural</span>
                    </div>
                </div>
            </div>

            <div class="product-card" data-category="manuka">
                <div class="product-badge premium">Premium</div>
                <div class="product-image">
