@model List<Category>

@{
    ViewData["Title"] = "Products";
}

<section class="products-page">
    <div class="container">
        <div class="page-header">
            <h1>Our Premium Honey Collection</h1>
            <p>Discover the finest honey products for your wellness journey</p>
        </div>

        <div class="products-filter">
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">All Products</button>
                @foreach (var item in Model)
                {
                    <button class="filter-btn" data-filter="@item.Name">@item.Name</button>
                }
            </div>
        </div>

        <div class="products-grid">
            @* start *@
            @foreach (var category in Model)
            {
                @foreach (var product in category.Products)
                {
                    

                <div class="product-card" data-category="@category.Name">
                    <div class="product-badge">Best Seller</div>
                    <div class="product-image">
                            <img src="/images/@product.ImageUrl" alt="@product.Name">
                        <div class="product-overlay">
                            <button class="add-to-cart-btn">Add to Cart</button>
                            <button class="quick-view-btn">Quick View</button>
                        </div>
                    </div>
                    <div class="product-info">
                            <h3>@product.Name</h3>
                            <p class="product-description">@product.Description</p>
                        <div class="product-price">
                                @{
                                    var PriceBeforeDiscount = product.Price + 10;
                                }
                            <span class="current-price">@product.Price.ToString("C2")</span>
                                <span class="original-price">@PriceBeforeDiscount.ToString("C2")</span>
                        </div>
                        <div class="product-rating">
                            <div class="stars">
                                @* @foreach (var star in product.Rating)
                                    {
                                        
                                    } *@
                                <i class="fas fa-star"></i>
                            </div>
                            <span class="rating-count">(127 reviews)</span>
                        </div>
                    </div>
                </div>
                }
            }
            @* end *@
        </div>
    </div>
</section>
