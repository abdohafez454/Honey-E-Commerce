@model Dictionary<Product, int>

@{
    ViewData["Title"] = "Shopping Cart";
}

<section class="cart-page">
    <div class="container">
        <div class="page-header">
            <h1>Shopping Cart</h1>
            <p>Review your selected honey products</p>
        </div>

        <div class="cart-content">
            <div class="cart-items-section">
                <div class="cart-header">
                    <h2>Your Items</h2>
                    <a class="clear-cart-btn" asp-action="ClearCart" style="text-decoration: none;">
                        <i class="fas fa-trash"></i>
                        Clear Cart
                    </a>
                </div>
                @foreach(var item in Model)
                {<div class="cart-item">
                        <img src="/images/@item.Key.ImageUrl" alt="@item.Key.ImageUrl" class="cart-item-image">

                    <div class="cart-item-details">
                            <h4 class="cart-item-name">@item.Key.Name</h4>
                        <p class="cart-item-price">@item.Key.Price.ToString("C2")</p>
                    </div>

                    <div class="cart-item-controls">
                        <div class="quantity-controls">
                                <a class="qty-control-btn" style="text-decoration: none;" href="/Cart/updateCart?amount=-1&Id=@item.Key.ProductID">-</a>
                            <span class="qty-display">@item.Value</span>
                                <a class="qty-control-btn" style="text-decoration: none;" href="/Cart/updateCart?amount=+1&Id=@item.Key.ProductID">+</a>
                        </div>
                            <a style="text-decoration: none;" class="remove-item-btn" asp-action="RemoveFromCart" asp-route-id="@item.Key.ProductID">
                            Remove
                        </a>
                    </div>

                </div>

                }

                <br    />
                <br    />
                <a href="@Url.Action("Index", "Product")" class="continue-shopping-btn">
                    <i class="fas fa-arrow-left"></i>
                    Continue Shopping
                </a>
            </div>
            @{
                var total = ViewBag.subtotal + 5;
            }
            <div class="cart-summary-section">
                <div class="cart-summary-card">
                    <h3>Order Summary</h3>
                    <div class="summary-details">
                        <div class="summary-row">
                            <span>Subtotal:</span>
                            <span class="cart-subtotal">@ViewBag.subtotal.ToString("C2")</span>
                        </div>
                        <div class="summary-row">
                            <span>Shipping:</span>
                            <span class="cart-shipping">$5.99</span>
                        </div>
                        <div class="summary-row">
                            <span>Tax:</span>
                            <span class="cart-tax">$0.00</span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-row total">
                            <span>Total:</span>
                            <span class="cart-total">@total.ToString("C2")</span>
                        </div>
                    </div>

                    <div class="promo-section">
                        <h4>Promo Code</h4>
                        <div class="promo-input-group">
                            <input type="text" class="promo-input" placeholder="Enter code" id="promoCode">
                            <button class="apply-promo" onclick="applyPromoCode()">Apply</button>
                        </div>
                    </div>

                    <div class="checkout-section">
                        <button class="checkout-btn" onclick="proceedToCheckout()" disabled>
                            <i class="fas fa-lock"></i>
                            Secure Checkout
                        </button>
                        <div class="payment-methods">
                            <span>We accept:</span>
                            <div class="payment-icons">
                                <i class="fab fa-cc-visa"></i>
                                <i class="fab fa-cc-mastercard"></i>
                                <i class="fab fa-cc-paypal"></i>
                                <i class="fab fa-cc-apple-pay"></i>
                            </div>
                        </div>
                    </div>

                    <div class="shipping-info">
                        <h4><i class="fas fa-truck"></i> Shipping Information</h4>
                        <ul>
                            <li><i class="fas fa-check"></i> Free shipping on orders over $50</li>
                            <li><i class="fas fa-check"></i> Standard delivery: 3-5 business days</li>
                            <li><i class="fas fa-check"></i> Express delivery available</li>
                        </ul>
                    </div>

                    <div class="security-badges">
                        <div class="security-item">
                            <i class="fas fa-shield-alt"></i>
                            <span>Secure Payment</span>
                        </div>
                        <div class="security-item">
                            <i class="fas fa-undo"></i>
                            <span>30-Day Returns</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recommended Products -->
        <div class="recommended-section">
            <h2>You might also like</h2>
            <div class="recommended-products">
                <div class="recommended-item">
                    <img src="/placeholder.svg?height=120&width=120&text=Royal+Jelly" alt="Royal Jelly Honey">
                    <h4>Royal Jelly Honey</h4>
                    <div class="price">$39.99</div>
                    <button class="add-recommended" onclick="addToCart('Royal Jelly Honey', 39.99)">
                        <i class="fas fa-plus"></i>
                        Add to Cart
                    </button>
                </div>
                <div class="recommended-item">
                    <img src="/placeholder.svg?height=120&width=120&text=Acacia+Honey" alt="Acacia Honey">
                    <h4>Acacia Honey</h4>
                    <div class="price">$22.99</div>
                    <button class="add-recommended" onclick="addToCart('Acacia Honey', 22.99)">
                        <i class="fas fa-plus"></i>
                        Add to Cart
                    </button>
                </div>
                <div class="recommended-item">
                    <img src="/placeholder.svg?height=120&width=120&text=Ginseng+Honey" alt="Ginseng Honey">
                    <h4>Ginseng Honey Blend</h4>
                    <div class="price">$34.99</div>
                    <button class="add-recommended" onclick="addToCart('Ginseng Honey Blend', 34.99)">
                        <i class="fas fa-plus"></i>
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
